# Apperance
colorscheme desert
syntax enable
set linebreak

# Indention Options
filetype plugin indent on
set autoindent
set expandtab
set smarttab
set tabstop=4
set shiftwidth=4

# Smart search
set ignorecase
set incsearch
set smartcase

# User interface
set laststatus=2
set title
set number

# Set mouse scroll
set mouse=a
